    /// <summary>
    /// Repository for Connection Entity.
    /// </summary>
    public class ConnectionRepository : Repository<Connection>{
        /// <summary>
        /// Constructor
        /// </summary>
        /// <param name="context"></param>
        public ConnectionRepository(DbContext context)
            : base(context)
        { }

        /// <summary>
        /// Retrieves a dictionary of Database identifiers matching their respective Connection Strings.
        /// </summary>
        /// <returns></returns>
        public Dictionary<string, string> RetrieveDictionary()
        {
        Dictionary<string, string> dicConnections = new Dictionary<string, string>();
        IEnumerable<Connection> listConnections = this.RetrieveEnumerable();
        foreach (Connection oConnection in listConnections)
            {
                dicConnections.Add(oConnection.Identifier, oConnection.ConnectionString);
            }
            return dicConnections;
        }
    }//End class
}//End Namespace
