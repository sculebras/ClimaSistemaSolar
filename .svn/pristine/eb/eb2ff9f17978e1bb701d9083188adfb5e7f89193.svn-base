EditPartial.vdHideIntegratedSecurityHidden = function vdHideIntegratedSecurityHidden(chkIntegratedSecurity) {
    ///2014-09-02 10:15:20 sculebras: 
    /// <signature>
    ///   <summary>Depending Integrated Security checkbox value, Hides or shows the table row for user and password.</summary>
    ///   <param name="chkIntegratedSecurity" type="Checkbox">Integrated Security checkbox.</param>
    /// </signature>
    var arrTr = $(".IntegratedSecurityHidden");
    //Clean data on User and Pass textboxes
    arrTr.find("input").val('');
    //alert(chkIntegratedSecurity.checked);
    if (chkIntegratedSecurity.checked) {
        arrTr.hide();
    }
    else {
        arrTr.show()
    }
}


EditPartial.blValidateForm = function blValidateForm() {
    ///<summary>
    ///Validates the form.
    ///(Executes jQuery form Validator).
    ///Returns:
    ///-true: Form validated.
    ///-false: Form Not validated. 
    ///</summary>
    /// <returns type="bool">Form jQueryValidator.</returns>
    var validator = $("form").first().validate();
    return validator.form(); //<-Performs Validation
}

