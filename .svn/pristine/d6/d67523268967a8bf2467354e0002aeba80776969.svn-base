<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - IAMS</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
   
</head>
<body>
    <header>
        <div id="LogoTitulo" class="float-left">
            <div class="float-left">
                <a href="@Url.Action("Index", "Home")"  
                   class="LogoLink"
                   style="text-decoration:none;"
                >
                    <img src="~/Images/logo-iams-auto.png" />
                </a>
            </div>
            <p class="site-title" style="margin-left: 20px">MultiTenancy Administrator</p>
        </div>
        <div class="float-right">
            <section id="login">
               @* @Html.Partial("_LoginPartial")*@
            </section>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @*<li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    <li>@Html.ActionLink("Connection", "Index", "Connection")</li>
                    <li>@Html.ActionLink("Configuration", "Index", "Configuration")</li>
                </ul>
            </nav>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    @*<footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - IAMS</p>
            </div>
        </div>
    </footer>*@

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

