    /// <summary>
    /// Represents a single application custom configuration.
    /// </summary>
    [DataContract]
    public class Configuration : EntityBase
    {
        /// <summary>
        /// Centralizes Hardcode of Configuration Items.
        /// </summary>
        public enum Items
        {
            /// <summary>
            /// Key Used to decrypt token. 
            /// (Alphanumeric) 
            /// </summary>
            TokenDecryptingKey = 1,
            /// <summary>
            /// Defines if Token Expiration is used or not.
            /// -0: Not Uses Token Expiration.
            /// -1: Uses Token Expiration.
            /// </summary>
            UseTokenExpiration,
            /// <summary>
            /// Expiration time in minutes to admit token if UseTokenExpiration is active.
            /// (Integer)
            /// </summary>
            TokenExpiringMinutes
        }
        
        [DataMember]
        [Column("IdConnection")]
        public override int Id { get; set; }
                
        [Required, MaxLength(100)]
        public string Name { get; set; }
        
        [DataMember]
        [Required, MaxLength(500), ValueCustomValidation]
        public string Value { get; set; }
        
        [Required, MaxLength(500)]
        public string Description { get; set; }
        

    }//End class
}//End Namespace				
